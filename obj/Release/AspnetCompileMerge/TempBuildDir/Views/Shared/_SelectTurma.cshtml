@model IEnumerable<ERAWeb.Models.TurmaModel>

@{
    ViewBag.Title = "_SelectTurma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="subTitulo" style="text-align:center;">Selecione a Turma</h1>
<br />
<br />
<table class="table centerTable" align="center">
    @foreach (var item in Model)
    {

        <tr class='clickableRow' href="@Url.Action("Selecionar", "Agenda", new { id = item.Id })">
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
        </tr>
    }

</table>
<br />
<br />
<br />
<br />
<br />
<script>
    jQuery(document).ready(function ($) {
        $(".clickableRow").click(function () {
            window.document.location = $(this).attr("href");
        });
    });
</script>