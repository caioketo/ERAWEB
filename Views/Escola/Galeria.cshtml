@model ERAWeb.Models.AvisoListModel

@{
    ViewBag.Title = "Galeria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="tableAvisos">
    @for (var i = 0; i < Model.Avisos.Count(); i++)
    {
        ERAWeb.Models.AvisoModel item = Model.Avisos[i];
        <tr>
            <td>
                <span class="avisos">
                    <h1 class="titulo">@Html.Raw(item.Aviso)</h1>
                </span> 
                <div class="imagensPai">
                    <div class="imagens">
                        @foreach (var arquivo in item.Arquivos)
                        {
                            <a class="fancybox" href="~/Content/Arquivos/@arquivo.Arquivo" data-fancybox-group="gallery"><img class="erathumb" src="~/Content/Arquivos/thumb_@arquivo.Arquivo" alt="" /></a>
                        }
                    </div>
                </div>
            </td>

        </tr>
        <tr class="space"></tr>
    }

</table>
<br />
<br />

<script type="text/javascript"> 
    $(document).ready(function () {
        /*
            *  Simple image gallery. Uses default settings
            */

        $('.fancybox').fancybox();

    });
</script>