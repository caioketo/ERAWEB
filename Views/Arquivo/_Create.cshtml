@model ERAWeb.Models.ArquivoModel


@using (Html.BeginForm("Create", "Arquivo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ @Html.AntiForgeryToken()
    <div id="createArquivo" class="form-horizontal">
        @Html.ValidationSummary(true)
        <p>
            <label class="h2">
                <b>@Html.LabelFor(model => model.Arquivo, new { @class = "control-label col-md-2" })</b>
            </label>
            <input type="file" name="file" />
        </p>
        <input type="submit" value="+" />
    </div>
}x
